- @current_section = :submission
- model_class = Submission


.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @submissions.each do |submission|
      %tr
        %td= link_to submission.id, submission_path(submission)
        %td= submission.user_id
        %td= submission.title
        %td= submission.description
        %td= submission.status
        %td= submission.active
        %td=l submission.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_submission_path(submission), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), submission_path(submission), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_submission_path, :class => 'btn btn-primary'
