- @current_section = :submission
- model_class = Submission


.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @submission.user_id
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @submission.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @submission.description
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @submission.status
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @submission.active

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), submissions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_submission_path(@submission), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), submission_path(@submission), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
